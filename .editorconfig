# Editor configuration, see http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.java]
indent_size = 4

[*.xml]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = off
indent_style = tab
indent_size = 2